
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  MENTOR
  MENTEE
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(MENTEE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mentorProfile MentorProfile?
  menteeProfile MenteeProfile?
}

model MentorProfile {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @unique @db.ObjectId
  user            User     @relation(fields: [userId], references: [id])
  bio             String?
  expertise       String[]
  organization    String?
  jobTitle        String?
  graduationYear  Int?
  linkedIn        String?
  expectations    String?
  preferredMentees Int      @default(0)
  
  selections      Selection[] @relation("MentorSelections") // Selections where this mentor was chosen
}

model MenteeProfile {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @unique @db.ObjectId
  user            User     @relation(fields: [userId], references: [id])
  interests       String[]
  batch           String?
  bio             String?
  portfolio       String?
  cvLink          String?
  github          String?
  linkedin        String?
  motivation      String?
  goal            String?
  
  selections      Selection[] // Selections made by this mentee
}

enum SelectionStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model Selection {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  menteeId  String   @db.ObjectId
  mentorId  String   @db.ObjectId
  rank      Int
  status    SelectionStatus @default(PENDING)      
  
  mentee    MenteeProfile @relation(fields: [menteeId], references: [id])
  mentor    MentorProfile @relation("MentorSelections", fields: [mentorId], references: [id])
  
  createdAt DateTime @default(now())

  @@unique([menteeId, rank]) // A mentee can only have one mentor per rank
  @@unique([menteeId, mentorId]) // A mentee generally shouldn't pick the same mentor twice? or maybe they can but different ranks? No, usually distinct.
}
